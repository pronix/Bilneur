<fieldset id='shipping_method'>
  <legend><%= t("shipping_method") %></legend>

  <div class="inner">
    <div id="methods">
      <p class="field radios">
        <% if @children_orders.blank? %>
          <% @order.rate_hash.each do |shipping_method| %>
            <label>
              <%= radio_button(:order, :shipping_method_id, shipping_method[:id]) %>
              <%= shipping_method[:name] %> <%= number_to_currency shipping_method[:cost] %>
            </label><br />
          <% end %>
        <% else %>
          <% @children_orders.each do |child_order| %>
          <h3><%= t("shipping_method") %> for seller <%= child_order.seller.fullname %></h3>

            <% child_order.rate_hash.each_with_index do |shipping_method, i| %>
              <label>
                <%= radio_button("order[children_orders][#{child_order.id}]", :shipping_method_id, shipping_method[:id],
                     {:checked => (i == 0)}) %>
                <%= shipping_method[:name] %> <%= number_to_currency shipping_method[:cost] %>
              </label><br />
            <% end %>
            <hr />
          <% end %>
        <% end %>
      </p>
    </div>

    <% if Spree::Config[:shipping_instructions] && @order.rate_hash.present? %>
      <p id="minstrs">
        <%= form.label :special_instructions, t("shipping_instructions") %><br />
        <%= form.text_area :special_instructions, :cols => 40, :rows => 7 %>
      </p>
    <% end %>
  </div>
</fieldset>

<div class="form-buttons">
  <input type="submit" class="continue button primary" value="<%=t("save_and_continue") %>"/>
</div>
