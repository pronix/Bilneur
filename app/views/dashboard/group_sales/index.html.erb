<%= render 'shared/per_page', :per_page => params[:per_page] %>
<% javascript 'ajax_pagination' %>

<div class="fdBck">
	<h2>Group Sales</h2>
  </div>
  <div class="pPgCmbo">
    <div class="cmbo7">
      <select id="per_page_select" tabindex="1" name="">
        <option value="1" title="">1</option>
        <option value="2" title="">2</option>
        <option value="3" title="">3</option>
        <option value="4" title="">4</option>
        <option value="5" selected="selected" title="">5</option>
      </select>
    </div>
    <b>Display per page</b>

  </div>
  <div class="bdrBtm"></div>

  <table class="tbl1" width="915px" cellpadding="0" cellspacing="0">

    <tr id="product_table_head">
      <td width="90px" class="thlHd">EAN/ SKU</td>
      <td width="214px" class="thlHd">Product</td>
      <td width="54px" class="thlHd">Price</td>
      <td width="89px" class="thlHd">Discount</td>
      <td width="90px" class="thlHd">Period</td>
      <td width="78px" class="thlHd">Purchases</td>
      <td width="86px" class="thlHd"></td>
    </tr>

    <% @group_sales.each do |item | %>
    <tr>
      <td><%= item.product.ean %></td>
      <td><%= item.variant.name %></td>
      <td><%= number_to_currency item.price %></td>
      <td>
        <%= number_to_currency item.discount_in_amount %> /
        <%= number_to_percentage item.discount_in_percentage, :precision => 0  %>
      </td>
      <td>
        <b>Start: <%= l item.start_selling, :format => "%m/%d/%Y" %></b>
        <br />
        <b>Stop: <%= l item.stop_selling, :format => "%m/%d/%Y"  %></b>
      </td>
      <td>
        <b>0</b>
      </td>
      <td>
        <%= link_to "Edit", "" %><br />
        <%= link_to "Delete", "" %><br />
        <%= link_to "Cancel", "" %><br />
        <%= link_to "Complete", "" %><br />
      </td>
    </tr>
    <% end %>

  </table>


  <div id="pagination">
    <div class="paging">
      <div class="blogPg">
        <%= page_entries_info @group_sales %>
      </div>
      <%= will_paginate(@group_sales,  :previous_label => "#{t('previous')}",  :next_label => "#{t('next')}") %>
    </div>
  </div>

</div>
