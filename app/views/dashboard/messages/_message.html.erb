
<div class="message">
  <div class="message-header">
    <span class="sender">
      <b>
        <% if message.sender == current_user %>
        me to <%= message.recipient.full_name  %>
        <% else %>
        <%= message.sender.full_name  %> to me
        <% end %>
      </b>
    </span>
    <span class="created_at" style="float:right;">
      <%= l message.created_at, :format => "%B %d, %Y %H:%M" %>
    </span>
  </div>
  <hr />
  <div class="content">
    <%= message.content %>
  </div>
</div>
