<div class="inbxTabs">
  <div id="TabbedPanels2" class="TabbedPanels">
    <%= render :partial => 'dashboard/shared/inbox_tabs', :locals => {:current => @state} %>
    <div class="TabbedPanelsContentGroup">

      <div class="inbx">
        <div class="tp"></div>
        <div class="cent">
	        <div class="inbxAct">
    	      <ul>
        	    <li>
                <%= link_to t('delete'), dashboard_message_path(@message), :method => :delete %>
              </li>
        	    <li>
                <%= link_to t('reply'), "", :class => "reply-link"%>
              </li>
            </ul>
            <div class="cmbo1">
              <select id="websites21" tabindex="1" name="">
                <option value="" selected="selected" title="">FIXMEMove to</option>
                <option value="" title="">1</option>
                <option value="" title="">2</option>
                <option value="" title="">3</option>
                <option value="" title="">4</option>
              </select>
            </div>

            <div class="prnt"><a href="#" onclick="window.print();"><img src="/images/forms/inbmsg_prnt.jpg" alt=""></a></div>

          </div>

          <div class="msgRead">
    	      <h2><%= @message.subject %></h2>
            <div class="msgCred">
              <p><i>From:</i><b><%= @message.sender.full_name %></b></p>
        	    <p><i>Sent:</i><b><%= l @message.created_at, :format => "%B %d, %Y %H:%M" %></b></p>
              <p><i>To:</i><b><%= @message.recipient.full_name %></b></p>
            </div>

            <div class="msgCnt">
              <%= @message.content %>

              <div class="shopInfo">
            	  <p class="sI1">
                	<i>User ID</i><b> #<%= @message.sender.id %></b>
                </p>
            	  <p class="sI2">
                  <i>User Name:</i><b><%= @message.sender.full_name %></b>
                </p>
            	  <p class="sI1">
                	<i>Item #:</i><b>FIXME</b>
                </p>

              </div>
            </div>

            <div class="inbxAct">
              <ul>
                <li>
                  <%= link_to t('delete'), dashboard_message_path(@message), :method => :delete %>
                </li>
                <li>
                  <%= link_to t('reply'), "", :class => "reply-link"%>
                </li>
              </ul>
            </div>

          </div>

        </div>
        <div class="bt"></div>
      </div>










      <div class="message_container" style="display:none">
          <h3 class="subject">Subject: </h3>
          <br />

          <%= render @children_messages  %>
          <br />
          <%= render 'shared/error_messages', :target => @reply_message %>

          <%= form_for((@reply_message||Message.new), :url => reply_dashboard_message_path(@message)) do |f| %>

          <fieldset>
            <div class="yui-gc">
              <div class="yui-u first">

                <%= f.field_container :content do %>
                <%= f.label :content, t("content")%><br />
                <%= f.text_area :content, {:cols => 60, :rows => 2, :class => 'fullwidth'} %>
                <%= f.error_message_on :content %>
                <% end %>

              </div>
            </div>
          </fieldset>

      <p class="form-buttons">
        <%= button t("actions.send") %>
      </p>

      <% end %>
    </div>


    </div>
  </div>
</div>
<script>
  $(function(){
   $(".reply-link").click(function(){ $(".message_container").show(); return false;});
  });
</script>
