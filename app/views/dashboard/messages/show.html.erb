<div class="inbxTabs">                            
<div id="TabbedPanels2" class="TabbedPanels">
<%= render :partial => 'dashboard/shared/inbox_tabs', :locals => {:current => @state} %>
    <div class="TabbedPanelsContentGroup">
      <div class="message_container">
        <h3 class="subject">Subject: <%= @message.subject %></h3>
        <%= render @message %> <br />

        <%= render @children_messages  %>
        <br />
        <%= render 'shared/error_messages', :target => @reply_message %>

        <%= form_for((@reply_message||Message.new), :url => reply_dashboard_message_path(@message)) do |f| %>

        <fieldset>
        <div class="yui-gc">
          <div class="yui-u first">
        
            <%= f.field_container :content do %>
            <%= f.label :content, t("content")%><br />
            <%= f.text_area :content, {:cols => 60, :rows => 2, :class => 'fullwidth'} %>
            <%= f.error_message_on :content %>
            <% end %>
        
          </div>
        </div>
        </fieldset>
        
        <p class="form-buttons">
           <%= button t("actions.send") %>
        </p>
        
        <% end %>
    </div>
  </div>
</div>
</div>
