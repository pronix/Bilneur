<%= render :partial => 'dashboard/shared/product_sub_menu', :locals => { :current => "Option Types" } %>

<div class="sptCntBus">
  <div class="top"></div>

	<div class="cntr">
    <h2 class="htFix"><%= t("option_types") %></h2>

    <div class='toolbar'>
      <ul class='actions'>
        <li id="new_ot_link">
          <%= button_link_to t("new_option_type"), new_dashboard_option_type_url,
              { :remote => true, :format => :js, :icon => 'add', :id => 'new_option_type_link'} %>
        </li>
      </ul>
      <br class='clear' />
    </div>


    <div id="new_option_type">
    </div>

    <table class="index sortable" id='listing_option_types'>
      <tr>
        <th><%= t("name") %></th>
        <th><%= t("presentation") %></th>
        <th></th>
      </tr>
      <% @option_types.each do |option_type| %>
      <tr id="<%= dom_id option_type %>">
        <td><span class="handle"></span> <%= option_type.name %></td>
        <td class='presentation'><%= option_type.presentation %></td>
        <td class="actions">
          <%= link_to t("edit"), edit_dashboard_option_type_path(option_type), :class => 'admin_edit_option_type' %>
          &nbsp;
          <%= link_to t("delete"), dashboard_option_type_path(option_type), :method => :delete %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

	<div class="btm"></div>
</div>
