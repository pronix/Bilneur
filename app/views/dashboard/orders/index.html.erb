<%= content_for :sub_menu do %>
  <ul id="sub_nav">
    <li><%= link_to "Realy", dashboard_orders_path %></li>
    <li><%= link_to "Virtual", dashboard_virtual_orders_path %></li>
  </ul>
<% end %>


<table class="index sortable">
    <thead>
      <tr>
        <th><%= t("order_number") %></th>
        <th><%= t("order_date") %></th>
        <th><%= t("status") %></th>
        <th><%= t("payment") %></th>
        <th><%= t("shipment") %></th>
        <th><%= t("total") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to order.number, dashboard_order_path(order) %></td>
        <td><%=order.created_at.to_date%></td>
        <td><%= t(order.state).titleize %></td>
        <td><%= t("payment_states.#{order.payment_state}") if order.payment_state %></td>
        <td>
          <ul>
            <% order.shipments.each do |ship|  %>
            <li>
              <b>seller:</b> <%= ship.seller.full_name %>, <b>state:</b> <%= t("shipment_states.#{ship.state}") %>
              <% if ship.can_receiving? %>
              <%= link_to "Receive", "" %>
              <% end %>
            </li>
            <% end %>
          </ul>
        </td>
        <td><%= number_to_currency order.total %></td>
        <td>
         </td>
      </tr>
    <% end %>
    </tbody>
</table>

