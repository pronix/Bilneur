<div class="fdBck" style="padding-bottom: 5px;">
	<h2><%= "#{t("actions.listing")} #{t("products")}" %></h2>
  <div class="cmbo6">
    <input class="txt" type="text" name="" value="" />
    <select id="websites21" tabindex="1" name="">
      <option value="" selected="selected" title="">Name</option>
      <option value="" title="">SKU</option>
    </select>
  </div>
</div>
<%= render :partial => 'dashboard/shared/product_sub_menu', :locals => { :current => "Products" } %>

<div class="sptCntBus">
	<div class="top"></div>

	<div class="cntr">
    <h2 class="htFix"></h2>

<div id="new_product"></div>

<table class="index" id='listing_products'>
  <tr>
      <th><%= t("sku") %></th>
      <th><%= sort_link @search,:ean, t("ean"), {}, {} %></th>
      <th><%= sort_link @search,:name, t("name"), {}, {} %></th>
    <th>
      <%= hook :admin_products_index_header_actions %>
    </th>
  </tr>

<%= form_for @search, :url => dashboard_products_path, :html => {:method => :get} do |f| %>
  <p>
    <%= f.label :name_contains, t("name") %><br />
    <%= f.text_field :name_contains, :size => 15 %>
  </p>
  <p>
    <%= f.label :variants_including_master_sku_contains, t("sku") %><br />
    <%= f.text_field :variants_including_master_sku_contains, :size => 15 %>
  </p>
  <%= f.submit %>
<% end %>

<% @products.each do |product| %>
  <tr <%= 'style="color:red;"' if product.deleted? %> id="<%= dom_id product %>">
      <td><%= product.sku %></td>
      <td><%= product.ean %></td>
      <td><%= product.name %></td>
      <!-- <td><%#= product.price %></td> -->
    <td class="actions">
      <% if can? :edit, product %>
      <%= link_to t("edit"), edit_dashboard_product_path(product) unless product.deleted? %>
      <% end %>
      <% if can? :destroy, product %>
        &nbsp;
       <%= link_to t("delete"),  dashboard_product_path(product) unless product.deleted? %>
       <% end %>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate(@products, :previous_label => "#{t('previous')}", :next_label => "#{t('next')}") %>
  </div>
	<div class="btm"></div>
</div>
