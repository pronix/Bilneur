<%= render :partial => 'dashboard/shared/product_sub_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li id="new_property_link">
      <%= link_to new_dashboard_property_url, :class => "button" do %>
      <span><%= t("new_property") %></span>
      <% end %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= t("properties") %></h1>

<div id="new_property"></div>

<%= image_tag "spinner.gif", :plugin=>"spree", :style => "display:none", :id => 'busy_indicator' %>

<table class="index" id='listing_properties'>
  <thead>
    <tr>
      <th><%= t("name") %></th>
      <th><%= t("presentation") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @properties.each do |property| %>
      <tr id="<%= dom_id property %>">
        <td><%= property.name %></td>
        <td><%= property.presentation %></td>
        <td class="actions">
          <% if can? :edit, property %>
          <%= link_to t("edit"), edit_dashboard_property_path(property), :class => 'edit' %>
          <% end %>
          &nbsp;
          <% if can? :destroy, property %>
          <%= link_to t("delete"), dashboard_property_path(property), :method => :delete %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

