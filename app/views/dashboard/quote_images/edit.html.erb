
<%= render :partial => 'dashboard/shared/quote_tabs', :locals => {:current => "Images"} %>

<%= render "shared/error_messages", :target => @image %>

<%= form_for(:image, :url => dashboard_quote_quote_image_url(@quote), :html => { :method => :put, :multipart => true }) do |f| %>
  <table class="basic-table">
    <tr>
      <td><%= t("thumbnail") %>:</td>
      <td><%= link_to(image_tag(@image.attachment.url(:mini)), @image.attachment.url(:product)) %></td>
    </tr>
    <%= render :partial => "form", :locals => { :f => f } %>
  </table>
  <p class="form-buttons">
    <%= button t("update") %>
    <%= t('or') %> <%= link_to t("cancel"), dashboard_quote_quote_images_url(@product), :id => "cancel_link" %>
  </p>
<% end %>
