<div class="yui-gc">
  <div class="yui-u first">
    <%- locals = {:f => f} %>
      <%= f.field_container :name do %>
        <%= f.label :name, t("name") %> <span class="required">*</span><br />
        <%= f.text_field :name, :class => 'fullwidth title', :value => f.object.name  %>
        <%= f.error_message_on :name %>
      <% end %>

      <%= f.field_container :description do %>
        <%= f.label :description, t("description")%><br />
        <%= f.text_area :description, {:cols => 60, :rows => 4, :class => 'fullwidth'} %>
        <%= f.error_message_on :description %>
    <% end %>
  </div>
  <div class="yui-u">

      <h2>
        <u> EAN: <%= @quote.ean %></u>
      </h2>
      <%= f.field_container :price do %>
        <%= f.label :price, t("price")%> <span class="required">*</span><br />
        <%= f.text_field :price, :value => number_with_precision(@quote.price, :precision => 2)  %>
        <%= f.error_message_on :price %>
      <% end %>

      <%= f.field_container :condition do %>
        <%= f.label :condition, t("condition")%> <span class="required">*</span><br />
        <%= select_tag("variant[condition]",
            options_for_select(Variant::CONDITION.collect {|ov| [ t("condition_#{ov}"), ov ] })) %>

        <%= f.error_message_on :condition %>
      <% end %>


      <%= f.field_container :sku do %>
        <%= f.label :sku, t("sku")%> </span><br />
        <%= f.text_field :sku   %>
        <%= f.error_message_on :sku %>
      <% end %>



    <ul id="shipping-specs">
      <li>
        <%= f.label :weight, t("weight")%>
        <%= f.text_field :weight, :size => 4 %>
      </li>
      <li>
        <%= f.label :height, t("height")%>
        <%= f.text_field :height, :size => 4 %>
      </li>
      <br />
      <li>
        <%= f.label :width, t("width")%>
        <%= f.text_field :width, :size => 4 %>
      </li>
      <li>
        <%= f.label :depth, t("depth")%>
        <%= f.text_field :depth, :size => 4 %>
      </li>
    </ul>

  </div>
</div>


