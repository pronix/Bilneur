    <%- locals = {:f => f} %>

      <b>
        <i><%= t("name") %></i>
        <%= f.text_field :name, :class => 'fullwidth title', :value => f.object.name  %>
        <%= f.error_message_on :name %>
      </b>

      <b>
        <i><%= t("description") %></i>
        <div class="bAY">
          <div class="txtA">
            <%= f.text_area :description, {:cols => 60, :rows => 4, :class => 'fullwidth'}  %>
            <%= f.error_message_on :description %>
          </div>
        </div>
      </b>

      <h2 class="htFix">
        <u> EAN: <%= @quote.ean %></u>
      </h2>

      <b>
        <i><%= t("sku") %></i>
        <%= f.text_field :sku   %>
        <%= f.error_message_on :sku %>
      </b>

      <b>
        <i><%= t("price") %></i>
        <%= f.text_field :price, :value => number_with_precision(@quote.price, :precision => 2)  %>
        <%= f.error_message_on :price %>
      </b>


      <b>
        <i><%= t("count_on_hand") %></i>
        <%= f.text_field :count_on_hand  %>
        <%= f.error_message_on :count_on_hand %>
      </b>

      <b>
        <i><%= t("weight") %></i>
        <%= f.text_field :weight  %>
        <%= f.error_message_on :weight %>
      </b>

      <b>
        <i><%= t("condition") %></i>
        <div class="cmbo2 websites">
          <%= select_tag("variant[condition]",
            options_for_select(Variant::CONDITION.collect {|ov| [ t("condition_#{ov}"), ov ] }, @quote.condition)) %>
        </div>

        <%= f.error_message_on :condition %>
        <div style="float: left; margin-left: 150px">
          ( <%= f.label :another_condition, t("other_condition") %>
          <%= f.text_field :another_condition, :class => 'title'  %> )
          <%= f.error_message_on :another_condition %>
        </div>
      </b>



