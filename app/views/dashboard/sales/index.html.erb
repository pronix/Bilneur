<%= content_for :sub_menu do %>
  <ul id="sub_nav">
    <li><%= link_to "Realy", dashboard_sales_path %></li>
    <li><%= link_to "Virtual", dashboard_virtual_sales_path %></li>
  </ul>
<% end %>


<table class="index sortable">
    <thead>
      <tr>
        <th><%= t("order_number") %></th>
        <th><%= t("order_date") %></th>
        <th><%= t("status") %></th>
        <th><%= t("buyer") %></th>
        <th><%= t("payment") %></th>
        <th><%= t("shipment") %></th>
        <th><%= t("total") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to order.number, dashboard_sale_path(order) %></td>
        <td><%=order.created_at.to_date%></td>
        <td><%= t(order.state).titleize %></td>
        <td><%= order.user.try(:full_name) %></td>
        <td><%= t("payment_states.#{order.payment_state}") if order.payment_state %></td>
        <td>
          <% if (@shipment = order.shipments.find_by_seller_id(current_user.id)) %>
            <%= t("shipment_states.#{@shipment.state}")  %>
            <%= link_to "Ship", ship_dashboard_sale_path(order) if @shipment.can_ship? %>
          <% end %>
        </td>
        <td><%= number_to_currency(order.total_for_seller(current_user)) %></td>
        <td>
         </td>
      </tr>
    <% end %>
    </tbody>
</table>

<%= will_paginate @orders %>
