<% javascript 'secret_question' %>

<%= render :partial => 'dashboard/shared/profile_tabs', :locals => {:current => "Secret Question"} %>
<h1><%= t("new_secret_question") %></h1>

<%= form_for(:secret_question, :url => dashboard_secrets_path, :html => { :multipart => true }) do |f| %>
 <div class="yui-gc">
   <div class="yui-u first">
     <%= f.collection_select :secret_question_variant_id, SecretQuestionVariant.public, :id, :variant, :prompt => "Chose a quastion" %>
     <!-- FIXME In cucumber test it's break, JS code for change display:block don't work, but in browser all good; -->
     <!-- CHANGE IT TO display:none -->
     <div id="own_question_div", style="display:block;">
       <%= label_tag "own_question", t("own_question") %><br />
       <%= text_field_tag "own_question", '', :class => 'fullwidth title' %>
     </div>
     <%= f.field_container :answer do %>
       <%= f.label :answer, t("answer") %><br />
       <%= f.text_field :answer, :class => 'fullwidth title' %>
       <%= f.error_message_on :answer %>
     <% end %>
   </div>
 </div>
 <p class="form-buttons">
   <button type="submit"><span>Save</span></button>
   <%= t("or") %> <%= link_to t("cancel"), dashboard_account_path %>
 </p>
<% end %>
