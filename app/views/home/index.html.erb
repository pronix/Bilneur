<!-- START LEFT COLUMN WITH CATEGORIES -->
<div class="colLft">
  <div class="cat">
    <h2>Browse By <span>Categories</span></h2>
    <ul>
      <% Taxon.category.try(:children).each do |taxon| %>
      <li>
        <%= link_to taxon.name, seo_url(taxon) %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<!-- END LEFT COLUMN WITH CATEGORIES -->


<!-- START CENTRAL CONTENT WITH TOPS -->
<div class="colRgt">

  <!-- START TOP PRODUCTS -->
  <div class="sldr1">
    <h2><span>Top Products</span></h2>
    <div class="sldrCnt">
      <%= link_to "View all Top Products", top_path(:products), :class => "crslHd"  %>
      <a class="prev browse left disabled"> </a>
      <div class="scrollable">
        <div style="left: 0px;" class="items">
          <div>
            <% @products.each_with_index do |product, index|  %>
            <% if index >= 4 && index % 4 == 0 %>
          </div><div>
            <% end %>
            <% link_to product,  :class => "pd1" do %>
            <i>
              <%= t122_image( product ) %>
            </i>
            <b>View This Product</b>
            <p><%= product.description.slice(0, 40) %></p>
            <span><em><%= number_to_currency product.best_price %></em> 50% Discount</span>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <a class="next browse right"></a>
      <br clear="all">
    </div>
  </div>
  <!-- END TOP PRODUCTS -->



  <!-- START TOP DEALS -->
  <div class="sldr1">
    <h2><span>Top Deals</span></h2>
    <div class="sldrCnt">
      <%= link_to "View all Top Deals", top_path(:deals), :class => "crslHd"  %>
      <a class="prev browse left disabled"> SAMI</a>
      <div class="scrollable">
        <div style="left: 0px;" class="items">
          <div>
            <% @deals.each_with_index do |product, index|  %>
            <% if index >= 4 && index % 4 == 0 %>
          </div><div>
            <% end %>
            <% link_to product,  :class => "pd1" do %>
            <i>
              <%= t122_image( product ) %>
            </i>
            <b>View This Product</b>
            <p><%= product.description.slice(0, 40) %></p>
            <span><em><%= number_to_currency product.best_price %></em> 50% Discount</span>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <a class="next browse right"></a>
      <br clear="all">
    </div>
  </div>
  <!-- END TOP DEALS -->



  <!-- START TOP SELLERS -->
  <div class="sldr1">
    <h2><span>Top Sellers</span></h2>
    <div class="sldrCnt sellersSlider">
      <%= link_to "View all Top Sellers", top_path(:sellers), :class => "crslHd" %>
      <a class="prev browse left disabled"> SAMI</a>
      <div class="scrollable">
        <div style="left: 0px;" class="items">
          <div>
            <% @sellers.each_with_index do |seller, index|  %>
            <% if index >= 4 && index % 4 == 0 %>
          </div><div>
            <% end %>
            <% link_to store_seller_path(seller),  :class => "pd1" do %>
            <i>
              <%=  image_tag(seller.photo.url(:for_review))  %>
            </i>
            <b><%= seller.full_name %></b>
            <p style="text-align: center;">
              <%= link_to "View Store", store_seller_path(seller) %>
            </p>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <a class="next browse right"></a>
      <br clear="all">
    </div>
  </div>
  <!-- END TOP SELLERS -->


</div>

<!-- END CENTRAL CONTENT WITH TOPS -->
