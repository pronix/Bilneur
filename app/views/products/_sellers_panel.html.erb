<div class="smlTabs">
  <div id="TabbedPanels2" class="TabbedPanels">

    <ul class="TabbedPanelsTabGroup">
      <% Variant::CONDITION.each_with_index  do |cdt, index| %>
        <li class="TabbedPanelsTab tab<%= index + 1 %>" tabindex="0"><span><%= t("condition_#{cdt}") %></span></li>
      <% end %>
    </ul>

    <div class="TabbedPanelsContentGroup">
      <div class="TabbedPanelsContent">
        <div class="cmboSrt">
          <form action="">
            <select id="sort_by_most_recent" tabindex="1" name="">
              <option value="" selected="selected" title=""> - Sort by most recent - </option>
              <option value="" title="">option 1</option>
              <option value="" title="">option 2</option>
              <option value="" title="">option 3</option>
              <option value="" title="">option 4</option>
            </select>
          </form>
        </div>

        <% best_deal = product.best_variant %>
        <% product.variants.condition(params[:condition]).each_with_index do |item, i| %>

        <div id="CollapsiblePanel<%= i + 1%>" class="CollapsiblePanel" data-seller="<%= item.seller.id %>">
          <div class="CollapsiblePanelTab" tabindex="0"></div>
          <div class="CollapsiblePanelContent dtlPnl ">

            <div class="lft">
              <b><%= number_to_currency(item.try(:price)) %></b>
              <i><%= image_tag "icons/yel_tick.png" %></i>
              <i><%= image_tag "icons/qmark.png" %></i>
              <span>Shipping:<em>Free</em></span>
              <span>Virtual Trading:<em>
                  <%= item.seller.virtual_seller? ? 'Yes' : 'No' %>
                  <%= image_tag "icons/qmark.png" %></em>
              </span>
              <p>&nbsp;</p>
              <span>Location:<em><%= item.seller.primary_address.try(:city)%></em></span>
              <span>Quantity Available:<em><%= item.count_on_hand %></em></span>
            </div>

            <div class="rgt">
              <i class="imag">
                <%= image_tag item.seller.photo.url(:for_review) %>
              </i>
              <span><%= item.seller.firstname %></span>
              <em>Reliability Score</em>
              <b>100%</b><i class="tg"><%= image_tag "icons/qmark.png" %></i><!-- FIXME -->
            </div>

            <div class="shares">
              <ul>
                <li class="lst1">
                  <%= link_to "Seller Information", about_seller_path(item.seller) %>
                </li><!-- FIXME -->
                <li class="lst2">
                  <%= link_to "Return Policy", return_policy_seller_path(item.seller) %>
                </li><!-- FIXME -->
                <li class="lst3">
                  <%= link_to "Feedback", feedback_seller_path(item.seller) %>
                </li><!-- FIXME -->
                <li class="lst4">
                  <%= link_to "Tweet About This Seller", "http://twitter.com/share?url=#{about_seller_url(item.seller)}" %>
                </li><!-- FIXME -->
                <li class="lst6">
                  <a href="#">Add Seller To Favorites</a>
                </li><!-- FIXME -->
              </ul>
            </div>

            <div class="cntcts">
              <p>
                <%= render :partial => "shared/cart_form", :object => item %>
              </p>
              <span>
                <%= link_to "View Seller's Store", products_seller_path(item.seller), :class => "vwSStr" %>
                <%= link_to "Contact Seller", new_message_path(item.seller), :class => "cntSlr" %>
              </span>

            </div>

          </div>
        </div>
        <% end %>
        <div class="tabCnt2">
          <a href="#">View All</a>
          <span>FIXME 21 Auctions Starting at</span>
          <b>FIXME $2.99</b>
        </div>
        <div class="tabCnt3">
          <a href="#">View All</a>
          <span>FIXME 20 more buyers needed</span>
          <b>FIXME 50% Group Discount</b>
        </div>
        <div class="btm"></div>
      </div>
      <div class="TabbedPanelsContent">Content 2</div>
      <div class="TabbedPanelsContent">Content 3</div>
    </div>
  </div>
</div>

