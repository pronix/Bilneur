<% @body_id = 'product-details' %>
<% stylesheet "slider/style", "slider/jquery", "slider/SpryTabbedPanels2", "slider/SpryTabbedPanels3", "slider/SpryCollapsiblePanel2", "product" %>
<% javascript "slider/jquery_002", "slider/jquery_003", "slider/SpryTabbedPanels", "slider/SpryCollapsiblePanel","product_sellers" %>

<div class="col1">
  <%= render "filters" %>
  <%= render "prd_dtl", :product => @product %>
</div>

<div class="col2">
  <%= render "group_sale_panel", :product => @product %>

  <%= render "vtrade_panel", :product => @product %>

  <%= render "viewing_users_panel", :product => @product %>
  <% if @product.similar_products.any? %>
    <%= render "similar_prd_panel", :product => @product %>
  <% end %>
</div>
