<% @body_id = 'product-details' %>
<% stylesheet "slider/style", "slider/jquery", "slider/SpryTabbedPanels2", "slider/SpryTabbedPanels3", "product" %>
<% javascript "slider/jquery_002", "slider/jquery_003", "SpryTabbedPanels", "product_detail" %>

<div class="col1">
  <%= render "filters" %>
  <%= render "prd_dtl", :product => @product %>
</div>
<div class="col2">
  <%#= render "view_all_panel", :product => @product %>
  <div>
    <ul>
      <% @product.variants.condition(params[:condition]).each do |item| %>

    <li>
      <b><%= number_to_currency(item.price) %></b>
      <%= item.seller.full_name%>
    </li>
    <% end %>
    </ul>
  </div>
  <%= render "vtrade_panel", :product => @product %>
  <%= render "viewing_users_panel", :product => @product %>
  <%= render "similar_prd_panel", :product => @product %>
</div>
