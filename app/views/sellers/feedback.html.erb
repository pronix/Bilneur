                     <span><%= link_to "Feedback as a Buyer", feedback_seller_path(:state => "as_buyer", :per_page => params[:per_page]), :remote => true %></span>
                   </li>
                   <li class="TabbedPanelsTab tab2 <%== "TabbedPanelsTabSelected" if params[:state] == "as_seller" %>" tabindex="0">
