                   </li>
                   <li class="TabbedPanelsTab tab3 <%== "TabbedPanelsTabSelected" if params[:state] == "left" %>" tabindex="0">
                     <span><%= link_to "Feedback Left", feedback_seller_path(:state => "left", :per_page => params[:per_page]), :remote => true %></span>
                   </li>
                  </ul>
                  

                  <div id="reviews_container">
                    <%= render "reviews", :reviews => @reviews %>
                  </div>

                </div>
              </div>
              </div>
