  <% products.each do |product| %>
    <% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
    <div class="smPrdcts">
      <div class="smPd">
          <i class="imgP"><%= link_to small_image(product), product %></i>
            <div class="pdDtl">
              <h4><%= product.name %></h4>
                <p><%= product.description %></p>
                <b class="revw">
                  <em>5</em>
                    <span>reviews</span>
                </b>
                <b>
                  <label><img src="/images/icons/yel_str_big.png" alt="" /></label>
                  <label><img src="/images/icons/yel_str_big.png" alt="" /></label>
                  <label><img src="/images/icons/yel_str_big.png" alt="" /></label>
                  <label><img src="/images/icons/yel_str_big.png" alt="" /></label>
                  <label><img src="/images/icons/grey_str_big.png" alt="" /></label>
                </b>
            </div>
            <div class="rTe">
              <b class="rT"><%= number_to_currency(product.price) %></b>
                <em class="oRt">retail <%= number_to_currency(product.price) %></em>
                <span class="avB">Available with 2 sellers</span>
                <ul>
                  <li><%= link_to image_tag("icons/ch_twtr.png"), "#" %></li>
                  <li><%= link_to image_tag("icons/ch_fb.png"), "#" %></li>
