<h1><%= t(:forgot_password) %></h1>

<table border="1">
<tr>
<th>Reset password via email</th>
<th>Reset password via secret question</th>
</tr>
<tr>
<td>
  <%= form_for User.new, :as => :user, :url => user_password_path do |f| %>
    <p>
      <label><%= t(:email) %>:</label><br />
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.submit t("reset_password") %>
    </p>
  <% end %>
</td>
<td>
  <%= form_for(:secret_question, :url => user_password_reset_by_question_path) do |f| %>
    <p>
      <%= label_tag :email, 'Email' %>
      <%= email_field_tag :email %>
    </p>
    <p>
      <%= f.collection_select :secret_question_variant_id, SecretQuestionVariant.public, :id, :variant, :prompt => "Chose a quastion" %>
    </p>
    <p>
      <%= label_tag "own_question", t("own_question") %><br />
      <%= text_field_tag "own_question" %>
    </p>
    <p>
      <%= f.label :answer, t("answer") %><br />
      <%= f.text_field :answer %>
    </p> 
    <p>
      <%= f.submit 'Reset password' %>
    </p>
  <% end %>
</td>
</tr>
</table>





